{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [ "node" ],
    "lib": [
      "es6",
      "es5"
    ],
    "paths": {
      "@shared/*": ["../shared/*"]
    },
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src",
  ],
}